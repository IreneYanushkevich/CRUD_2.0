<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
        changeLogId="337162de-c346-467f-8796-dde85c0ae1b6">

    <changeSet id="1" author="irina.yanushkevich" runOnChange="true">
        <createTable tableName="writer">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="irina.yanushkevich" runOnChange="true">
        <createTable tableName="post">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="varchar (2000)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="post_status" type="varchar (15)">
                <constraints nullable="true"/>
            </column>
            <column name="writer_id" type="int">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="writer_id"
                                 baseTableName="post"
                                 constraintName="fk_writer_id_post"
                                 referencedColumnNames="id"
                                 referencedTableName="writer"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="3" author="irina.yanushkevich" runOnChange="true">
        <createTable tableName="label">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint
                columnNames="name"
                tableName="label"/>
    </changeSet>

    <changeSet id="4" author="irina.yanushkevich" runOnChange="true">
        <createTable tableName="posts_labels">
            <column name="post_id" type="int">
                <constraints primaryKey="true" nullable="true"/>
            </column>
            <column name="label_id" type="int">
                <constraints primaryKey="true" nullable="true"/>
            </column>
        </createTable>
        <addUniqueConstraint
                columnNames="post_id, label_id"
                tableName="posts_labels"/>
        <addForeignKeyConstraint baseColumnNames="post_id"
                                 baseTableName="posts_labels"
                                 constraintName="fk_post_id_label_id"
                                 referencedColumnNames="id"
                                 referencedTableName="post"
                                 onDelete="SET NULL"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseColumnNames="label_id"
                                 baseTableName="posts_labels"
                                 constraintName="fk_post_id_label_id"
                                 referencedColumnNames="id"
                                 referencedTableName="label"
                                 onDelete="SET NULL"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
